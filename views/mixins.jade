mixin breadcrumb(...route)
	- var levelNames = { admin: "Admin", berths: "Berths", cameras: "Cameras", profile: "Profile", users: "Users" }
	- var path = "";
	ul
		li
			a(href="/") BoatCam
		each level in route
			- path += "/" + level
			| &nbsp;>&nbsp;
			li
				a(href=path)= levelNames[level]

